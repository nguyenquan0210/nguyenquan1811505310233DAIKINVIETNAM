<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FAF9F9">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
           android:layout_margin="15dp"
            android:src="@drawable/taikhoan" />

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView"
            android:text="Admin"
            android:textColor="#070707"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/imageView"
            android:text="0373951042"
            android:textColor="#070707"
            android:textSize="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"

            android:gravity="right"
            android:layout_toRightOf="@+id/textView2">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"


            android:layout_marginTop="15dp"
            android:src="@drawable/next" />
    </LinearLayout>
    </RelativeLayout>

    <!-- Content below header and above footer -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="0dp"
        android:background="#EFF3EF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/cd"
            android:orientation="horizontal"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/setting"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="    Cài đặt"
            android:textColor="#000"
            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="right"
                >
                <ImageView
                    android:id="@+id/imagecd2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"



                    android:src="@drawable/next" />
            </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"

            android:id="@+id/cd1"
            android:layout_below="@+id/cd"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/help"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="    Câu hỏi thường gặp"
                android:textColor="#000"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="right"
                >
                <ImageView
                    android:id="@+id/imagecd3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/next" />
            </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"


            android:id="@+id/cd2"
            android:layout_below="@+id/cd1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/feedback"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="    Gửi phản hồi"
                android:textColor="#000"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="right"
                >
                <ImageView
                    android:id="@+id/imagecd4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/next" />
            </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"

            android:id="@+id/cd3"
            android:layout_below="@+id/cd2"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/hotro"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="    Trung tâm hỗ trợ"
                android:textColor="#000"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="right"
                >
                <ImageView
                    android:id="@+id/imagecd5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/next" />
            </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"

            android:id="@+id/cd4"
            android:layout_below="@+id/cd3"
            >
            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/tthotro"
            android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="    Thông tin hỗ trợ"
                android:textColor="#000"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="right"
                >
                <ImageView
                    android:id="@+id/imagecd6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/next" />
            </LinearLayout>
    </LinearLayout>

        <Button
            android:id="@+id/button_DangXuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cd4"
            android:text="Đăng xuất"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_margin="15dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="DAIKIN VIETNAM 1.3.0(41)"
            android:id="@+id/tvpb"
            android:layout_below="@+id/button_DangXuat"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvpb"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/imgbct"


                android:src="@drawable/bct"

                />
        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>